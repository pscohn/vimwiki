<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

<dl class="form-group">
  <dt><%= f.label :username %></dt>
  <dd><%= f.text_field :username, class: 'form-control' %></dd>
</dl>

<dl class="form-group">
  <dt><%= f.label :email %></dt>
  <dd><%= f.email_field :email, class: 'form-control' %></dt>
</dl>

<dl class="form-group">
  <dt><%= f.label :password %></dt>
  <dd><%= f.password_field :password, class: 'form-control' %></dd>
</dl>

<dl class="form-group">
  <dt><%= f.label :password_confirmation, "Confirm Password" %></dt>
  <dd><%= f.password_field :password_confirmation, class: 'form-control' %></dd>
</dl>

  <%= f.submit @user.id ? 'Update' : 'Create Account', class: 'btn' %>
<% end %>
